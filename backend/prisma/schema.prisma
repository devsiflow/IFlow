generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String           @id
  name         String
  matricula    String           @unique
  profilePic   String?
  createdAt    DateTime         @default(now())
  isAdmin      Boolean          @default(false)
  isSuperAdmin Boolean          @default(false)
  campusId     Int?
  campus       Campus?          @relation(fields: [campusId], references: [id])
  items        Item[]
  validations  ItemValidation[] @relation("ProfileValidations")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]
}

model Item {
  id          Int              @id @default(autoincrement())
  title       String
  description String
  status      String           @default("perdido")
  location    String
  createdAt   DateTime         @default(now())
  userId      String
  categoryId  Int?
  campusId    Int?
  category    Category?        @relation(fields: [categoryId], references: [id])
  campus      Campus?          @relation(fields: [campusId], references: [id])
  user        Profile          @relation(fields: [userId], references: [id])
  images      ItemImage[]
  validations ItemValidation[] @relation("ItemValidations")
}

model ItemImage {
  id     Int    @id @default(autoincrement())
  url    String
  itemId Int
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model ItemValidation {
  id              Int      @id @default(autoincrement())
  userId          String?
  itemId          Int
  descricao       String
  localPerda      String
  detalhesUnicos  String
  conteudoInterno String
  momentoPerda    String
  createdAt       DateTime @default(now())
  item            Item     @relation("ItemValidations", fields: [itemId], references: [id])
  profile         Profile? @relation("ProfileValidations", fields: [userId], references: [id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model solicitacoes {
  id               Int       @id @default(autoincrement())
  item_id          Int?
  aluno_id         String?   @db.Uuid
  status           String?   @default("pendente") @db.VarChar(50)
  observacoes      String?
  data_solicitacao DateTime? @default(now()) @db.Timestamp(6)
}


model Campus {
  id        Int       @id @default(autoincrement())
  nome      String
  profiles  Profile[]
  items     Item[]
}
