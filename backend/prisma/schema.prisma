generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String           @id
  name         String
  matricula    String           @unique
  profilePic   String?
  createdAt    DateTime         @default(now())
  isAdmin      Boolean          @default(false)
  isSuperAdmin Boolean          @default(false)
  campusId     Int?
  items        Item[]
  validations  ItemValidation[] @relation("ProfileValidations")
  campus       Campus?          @relation(fields: [campusId], references: [id])
  solicitacoes Solicitacao[]    @relation("SolicitacaoAluno")

  @@map("profile")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]

  @@map("category")
}

model Item {
  id           Int              @id @default(autoincrement())
  title        String
  description  String
  status       ItemStatus       @default(perdido)
  location     String
  createdAt    DateTime         @default(now())
  userId       String
  categoryId   Int?
  campusId     Int?
  campus       Campus?          @relation(fields: [campusId], references: [id])
  category     Category?        @relation(fields: [categoryId], references: [id])
  user         Profile          @relation(fields: [userId], references: [id])
  images       ItemImage[]
  validations  ItemValidation[] @relation("ItemValidations")
  solicitacoes Solicitacao[]    @relation("SolicitacaoItem")

  @@map("item")
}

model ItemImage {
  id     Int    @id @default(autoincrement())
  url    String
  itemId Int
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@map("item_image")
}

model ItemValidation {
  id              Int          @id @default(autoincrement())
  userId          String?
  itemId          Int
  descricao       String
  localPerda      String
  detalhesUnicos  String
  conteudoInterno String
  momentoPerda    String
  status          String       @default("pendente")
  createdAt       DateTime     @default(now())
  item            Item         @relation("ItemValidations", fields: [itemId], references: [id])
  profile         Profile?     @relation("ProfileValidations", fields: [userId], references: [id])

  @@map("item_validation")
}

model Solicitacao {
  id               Int      @id @default(autoincrement())
  item_id          Int
  aluno_id         String
  status           String   @default("pendente")
  observacoes      String?
  data_solicitacao DateTime @default(now())
  aluno            Profile  @relation("SolicitacaoAluno", fields: [aluno_id], references: [id])
  item             Item     @relation("SolicitacaoItem", fields: [item_id], references: [id])

  @@map("solicitacoes")
}

model Campus {
  id       Int       @id @default(autoincrement())
  nome     String
  items    Item[]
  profiles Profile[]

  @@map("campus")
}

enum ItemStatus {
  perdido
  encontrado
  devolvido
}

